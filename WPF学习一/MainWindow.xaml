<Window x:Class="WPF学习一.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF学习一"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Height="600" Width="800">
        <Button Content="确   认" Width="150" Height="60" FontWeight="Bold" FontSize="20" Click="Button_Click" Margin="325,335,325,205" Background="DarkBlue" Foreground="White" >
            <Button.Template>
                <ControlTemplate TargetType="Button" >
                    <Border BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="1" CornerRadius="9">
                        <Border.Background>
                            darkblue
                        </Border.Background>
                        <ContentPresenter Content="{TemplateBinding ContentControl.Content}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <Button.BitmapEffect>
                <DropShadowBitmapEffect Direction="0" ShadowDepth="4" Color="Black" Opacity="0.6" />
            </Button.BitmapEffect>
        </Button>
        <Button Width="200" Height="60" Content="圆角按钮" FontSize="30" Foreground="White" Background="green" Click="Button_Click_1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Button.Resources>
            <!--<Button.BitmapEffect>
                <DropShadowBitmapEffect Direction="0" ShadowDepth="4" Color="Black" Opacity="0.6" />
            </Button.BitmapEffect>-->
            <Button.Effect>
                <DropShadowEffect Direction="0" ShadowDepth="12" Color="Black" Opacity="0.7"/>
            </Button.Effect>
        </Button>
        <Button Content="透明按钮" FontSize="40" FontWeight="Bold" Opacity="0.8" Width="300" Height="60" Foreground="Blue" Margin="250,160,250,380" FontFamily="Cascadia Code">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect Direction="10" ShadowDepth="9" Opacity="0.8" Color="Black"/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>
