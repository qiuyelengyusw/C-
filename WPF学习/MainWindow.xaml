<Window x:Class="WPF学习.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF学习"
        mc:Ignorable="d"
        Title="WPF学习" Height="450" Width="800" Icon="/versioncue cs2.ico" FontSize="12" FontWeight="Bold" Background="#FF68B987" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Top" RenderTransformOrigin="0.509,-1.937" FontSize="20" FontWeight="Normal" Foreground="#FF0D10DE"/>
        <RadioButton x:Name="HelloButton" Content="RadioButton" HorizontalAlignment="Left" Margin="158,0,0,0" VerticalAlignment="Center" FontSize="16" Foreground="#FF0936ED"/>
        <RadioButton x:Name="GoodbyButton" Content="RadioButton" HorizontalAlignment="Left" Margin="542,0,0,0" VerticalAlignment="Center" Foreground="#FF0429F5" FontSize="16"/>

    </Grid>
</Window>
